<div class="container-fluid">
	<div class="row-fluid">
		<div class="span2">
			<ul>
				<% @employee.each do |t| %>
					<li>	
					<%= t.name %>
					</li>
				<% end %>
				</ul>
		</div>
		<div class="span10">
			<div>
				<table class="table">
					<thead>
						<tr>
							<th>Send By</th>
							
							<th>Send To</th>
							
							<th>Message</th>
						</tr>
					</thead>
					<tbody>
						<% @message.each do |t| %>
							<tr>
								<td><%= t.send_from %></td>
								<td><%= t.send_to %></td>
								<td><%= t.message %></td>
								</tr>
						<%end %>
						</tbody>
					</table>
			</div>
<%= form_tag("/main/message_deliver", :method => "post") do %>
		<%= text_field_tag(:message) %>
			  <%= submit_tag("Send") %>
			<% end %>
			<!--Body content-->
		</div>
	</div>
</div>
