<%= form_tag("/main/log_in", :method => "post", :id => "form-login") do %>
	  <%= label_tag(:q, "Name:") %>
		<%= text_field_tag 'name', nil, :class => "required" %>
		<%= label_tag(:q, "Password:") %>
		  <%= password_field_tag(:password, nil, :class => "required", :minlength => 5) %>
			  <%= submit_tag("Log In") %>
			<% end %>
